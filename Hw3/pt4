  <script>
      "use strict";
        function check(i){
          let checkboxes = document.getElementById("check"+i);
          let checker = document.getElementById("num"+i);
          if (checkboxes.checked == true){
            checker.value = "1";
          }
          else{
              checker.value = "";
          }
          //Essentially this checks in to see what checkbox was clicked
          //Defined by i and then sets the number box to 1 by deafult
        }
        function blurbox(i){
            let checkboxes = document.getElementById("check"+i);
            let checker = document.getElementById("num"+i);
            if (checker.value == "" || checker.value == "0"){
                checkboxes.checked = false;
                checker.value = "";
            }
            else{
                checkboxes.checked = true;
            }
            //Esentially this checks if the checker has a good value
            //If it doesn't it deactivates the box or activates depending
            //on the situation
            }
        function submitTheForm(){
            let productname = ["Razer Pro Click Mini","Razer DeathAdder V2","Razer Basilisk V3","Razer DeathAdder"];
            var numberofproduct = [0,0,0,0];
            for(let i=0; i<4;i++){
                let checker = document.getElementById("num"+i);
                if (checker.value == ""){
                    console.log("ok");
                }
                else{
                    numberofproduct[i]=checker.value;
                }
            }
            alert(numberofproduct[0]+" "+ productname[0]+"\n"+numberofproduct[1]+" "+ productname[1]+"\n"+numberofproduct[2]+" "+ productname[2]+"\n"+numberofproduct[3]+" "+ productname[3]+"\n");
            //So the deal here is to collect the numbers of each item 
            //Collected to and print it out to make sure that the 
            //Items ordered are the items that are recorded
            //In the future if I have more time I will optimize this by
            //Using an array that would have all the values assigned
            //I might do that tonight hence what might be above
            //But I also have 2 Essays and 3 other programming
            //projects including my own pet project so that might
            //Be pushed back until a later date when I am better 
            //caught up :)
        }
        
  </script>
